<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static.home.logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static.home.home"), "#" %></li>
        <li><%= link_to t("static.home.help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "http://localhost:3000", id: "dLabel", class: "dropdown-toggle",
              "data-toggle": "dropdown", "role": "button",
              "aria-haspopup": "true", "aria-expanded": "false",
              "data-target":"#" do %>
                <%= t"account" %>
                <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" aria-labelledby="dLabel">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static.home.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
