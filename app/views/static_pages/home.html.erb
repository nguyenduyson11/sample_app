<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
        <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("microposts.micropost_feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <%= link_to t("static.home.to_en"), locale: :en %>
  <%= link_to t("static.home.to_vi"), locale: :vi %>
  <div class="center jumbotron">
    <h1><%= t("static.home.text_home_title") %></h1>
    <h2>
      <%= t("static.home.text_home_page") %>
      <%= link_to t("static.home.ruby_link"), t("static.home.link_ruby") %>
    </h2>
    <%= link_to t("static.home.sigup_now"), "#", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
